@using ConsumingAPIDotNetMVCBootstrap.Services
@{
    DataResponse serviceData = new ServiceDataResponse().GetDataResponse("jogos/megasena/lasted");
    var data = serviceData.Data.FirstOrDefault();
    ViewData["Title"] = data.TipoJogo.Replace("_", " ");
    var accumulatedValue = data.ValorAcumuladoConcursoEspecial; 
}
<h1>@ViewData["Title"]</h1>

<br />
<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">N. Jogo</th>
                <th scope="col">Time 1</th>
                <th scope="col">Gols Time1</th>
                <th scope="col">X</th>
                <th scope="col">Gols Time2</th>
                <th scope="col">Time 2</th>
            </tr>
        </thead>
    </table>

    <tbody>
        @foreach (var game in data.ListaResultadoEquipeEsportiva)
        {
            <tr>
                <th scope="row">@game.NuJogo</th>
                <td>@game.NomeEquipeUm</td>
                <td>@game.NuGolEquipeUm</td>
                <td>X</td>
                <td>@game.NuGolEquipeDois</td>
                <td>@game.NomeEquipeUm</td>
            </tr>
        }
    </tbody>

</div>

<br />
<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
        <h1 class="display-4 fst-italic">@accumulatedValue</h1>
        <p class="lead my-3">Valor acumulado</p>
    </div>
</div>